# GKE Auto-Heal Agent Configuration
# Copy this file to .env and update with your values

# Google Cloud Project Configuration
GCP_PROJECT_ID=cogent-spirit-469200-q3
GCP_PROJECT_NUMBER=594712791697
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Online Boutique Application
ONLINE_BOUTIQUE_URL=http://your-online-boutique-url
ONLINE_BOUTIQUE_NAMESPACE=online-boutique
ONLINE_BOUTIQUE_FRONTEND_SERVICE=frontend-external
ONLINE_BOUTIQUE_HEALTH_ENDPOINT=/health
ONLINE_BOUTIQUE_READY_ENDPOINT=/ready

# Online Boutique Service Endpoints (for direct service testing)
FRONTEND_SERVICE_URL=http://frontend.online-boutique:8080
CART_SERVICE_URL=http://cartservice.online-boutique:7070
PRODUCT_CATALOG_SERVICE_URL=http://productcatalogservice.online-boutique:3550
CURRENCY_SERVICE_URL=http://currencyservice.online-boutique:7000
PAYMENT_SERVICE_URL=http://paymentservice.online-boutique:50051
SHIPPING_SERVICE_URL=http://shippingservice.online-boutique:50051
EMAIL_SERVICE_URL=http://emailservice.online-boutique:8080
CHECKOUT_SERVICE_URL=http://checkoutservice.online-boutique:5050
RECOMMENDATION_SERVICE_URL=http://recommendationservice.online-boutique:8080
AD_SERVICE_URL=http://adservice.online-boutique:9555

# Webhook Configuration
WEBHOOK_URL=http://your-agent-webhook-url/webhook
WEBHOOK_SECRET=your-webhook-secret-change-in-production

# Kubernetes Configuration
KUBECONFIG=/path/to/your/kubeconfig
KUBECTL_CONTEXT=your-gke-cluster-context

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
GEMINI_MODEL=gemini-1.5-pro

# ChatBot Configuration
WEBSOCKET_SECRET=your-websocket-secret-change-in-production
CHATBOT_PORT=8080

# Logging Configuration
FASTMCP_LOG_LEVEL=INFO
LOG_LEVEL=INFO

# Development Configuration
ENVIRONMENT=development
DEBUG=true

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/opt/playwright
PLAYWRIGHT_HEADLESS=true

# Agent Configuration
AGENT_WEBHOOK_PORT=8080
AGENT_HEALTH_CHECK_PORT=8081
AGENT_METRICS_PORT=8082

# A2A Communication
A2A_BROKER_URL=redis://localhost:6379
A2A_MESSAGE_TTL=3600

# Database Configuration (for audit trails)
DATABASE_URL=sqlite:///data/auto_heal_agent.db

# Security Configuration
JWT_SECRET=your-jwt-secret-for-api-auth
API_KEY=your-api-key-for-external-access

# Monitoring Configuration
PROMETHEUS_METRICS_ENABLED=true
JAEGER_TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces